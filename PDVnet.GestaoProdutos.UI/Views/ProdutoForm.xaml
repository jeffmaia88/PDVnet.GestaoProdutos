<Window x:Class="PDVnet.GestaoProdutos.UI.Views.ProdutoForm"
        xmlns:vm="clr-namespace:PDVnet.GestaoProdutos.UI.ViewModels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDVnet.GestaoProdutos.UI.Views"
        mc:Ignorable="d"
        xml:lang="pt-BR"
        Title="Cadastrar Produto" Height="450" Width="400" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="AliceBlue">
    

    <Window.DataContext>
        <vm:ProdutoFormViewModel />
    </Window.DataContext>



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10" Orientation="Horizontal">
            <Label Content="Nome:" FontWeight="Bold" Width="60"/>
            <TextBox Text="{Binding Produto.Nome, UpdateSourceTrigger=LostFocus}" Height="30" Width="280" VerticalContentAlignment="Center" FontSize="15"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Descrição:" FontWeight="Bold"/>
            <TextBox Text="{Binding Produto.Descricao, UpdateSourceTrigger=LostFocus}" Height="150" FontSize="15"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10" Orientation="Horizontal">
            <Label Content="Preço:" FontWeight="Bold" Width="50"/>
            <TextBox Text="{Binding Produto.Preco, UpdateSourceTrigger=LostFocus}" PreviewTextInput="ValidarPreco" VerticalContentAlignment="Center" Height="30" Width="100" FontSize="15"/>

            <Label Content="Quantidade:" FontWeight="Bold" Width="80" Margin="20,0,10,0"/>
            <TextBox Text="{Binding Produto.Quantidade, UpdateSourceTrigger=LostFocus}" PreviewTextInput="ValidarQuantidade" VerticalContentAlignment="Center" Height="30" Width="80" FontSize="15"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,70" >
            <Button x:Name="btnSalvar" Content="Salvar" Click="SalvarProdutoClick" Width="100" Height="35"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" />
            <Button x:Name="btnCancelar" Content="Cancelar" Click="CancelarClick" Width="100" Height="35"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold" />
        </StackPanel>

    </Grid>
</Window>
