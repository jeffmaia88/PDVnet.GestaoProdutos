<Window x:Class="PDVnet.GestaoProdutos.UI.Views.MainWindow"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:PDVnet.GestaoProdutos.UI.ViewModels"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDVnet.GestaoProdutos.UI.Views"
        mc:Ignorable="d"
        Title="Gestao de Produtos - PDVnet" Width="950" Height="650" 
        WindowStartupLocation="CenterScreen"
        Background="AliceBlue"
        xml:lang="pt-BR">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>                       
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Border Background="DarkOrchid" CornerRadius="9" Padding="15" Margin="0,0,15,0" Width="250">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.9" BlurRadius="8"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Total de Produtos" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <TextBlock Text="{Binding TotalProdutos}" FontWeight="Bold" Foreground="White" FontSize="24"/>
                </StackPanel>
            </Border>

            <Border Background="Orange" CornerRadius="9" Padding="15" Margin="50,0,15,0" Width="250">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.9" BlurRadius="8"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Baixo Estoque" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <TextBlock Text="{Binding ProdutosBaixoEstoque}" FontWeight="Bold" Foreground="Black" FontSize="24"/>
                </StackPanel>
            </Border>

            <Border Background="LimeGreen" CornerRadius="9" Padding="15" Width="250" Margin="50,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.9" BlurRadius="8"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Valor Total do Estoque" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" FontSize="14"/>
                    <TextBlock Text="{Binding ValorTotalEstoque, StringFormat={}{0:C}}" FontWeight="Bold" Foreground="White" FontSize="24"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
            <Button Content="Novo Produto" Click="NovoProdutoClick"  Width="100" Height="35" Margin="15,0,10,0" Background="DodgerBlue" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Editar Produto" Click="EditarProdutoClick" Width="100" Height="35" Margin="15,0,10,0" Background="DarkGreen" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
            <Button Content="Excluir Produto" Click="ExcluirProdutoClick" Width="100" Height="35" Margin="15,0,10,0" Background="Crimson" Foreground="White" FontWeight="Bold" Cursor="Hand" />
            <Button Content="Atualizar" Click="AtualizarClick" Width="100" Height="35" Margin="15,0,10,0" Background="DarkGray" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Produtos}" SelectedItem="{Binding ProdutoSelecionado, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,15,0,0" IsReadOnly="True">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Quantidade}" Value="4">
                            <Setter Property="Background" Value="Tomato"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantidade}" Value="3">
                            <Setter Property="Background" Value="Tomato"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantidade}" Value="2">
                            <Setter Property="Background" Value="Tomato"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantidade}" Value="1">
                            <Setter Property="Background" Value="Tomato"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Quantidade}" Value="0">
                            <Setter Property="Background" Value="Tomato"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Nome do Produto" Binding="{Binding Nome}" Width="150"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                <DataGridTextColumn Header="Preço" Binding="{Binding Preco, StringFormat={}{0:C2}}" Width="90"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="80"/>
                <DataGridTextColumn Header="Data de Cadastro" Binding="{Binding DataCadastro, StringFormat={}{0:dd/MM/yyyy}}" Width="110"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
